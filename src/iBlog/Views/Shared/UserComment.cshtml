@model iBlog.Models.CommentViewModel

@using (Html.BeginForm("Add", "Comment", FormMethod.Post, new { id = "userComment", @class="form-horizontal", role = "form" }))
{
    <fieldset>
        <legend>Post your comment</legend>
        <div class="form-group has-feedback">
            @Html.LabelFor(c => c.Comment.CommenterName, "Display Name", new { @class = "col-lg-3 control-label" })
            <div class="col-lg-5">
                @Html.TextBoxFor(c => c.Comment.CommenterName, new { @class = "form-control", placeholder = "please input your nick name", required = true, maxlength = 32 })
            </div>
            <div class="col-lg-4">
                <h5>
                    <span class="label label-danger">required</span>
                    <span class="label label-info">Maximum length of 32</span>
                </h5>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Comment.CommenterEmail, "Email Address", new { @class = "col-lg-3 control-label" })
            <div class="col-lg-5">
                @Html.TextBoxFor(c => c.Comment.CommenterEmail, new { @class = "form-control", placeholder = "please input your email address", type = "email", maxlength = 32 })
            </div>
            <div class="col-lg-4">
                <h5>
                    <span class="label label-success">Optional</span>
                    <span class="label label-primary">Example: 10000@qq.com</span>
                </h5>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Comment.CommenterSite, "Site Address", new { @class = "col-lg-3 control-label" })
            <div class="col-lg-5">
                @Html.TextBoxFor(c => c.Comment.CommenterSite, new { @class = "form-control", placeholder = "please input your web site address", type = "url", maxlength = 32 })
            </div>
            <div class="col-lg-4">
                <h5>
                    <span class="label label-success">Optional</span>
                    <span class="label label-primary">Example: http:\\zhulei.info</span>
                </h5>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Comment.Content, "Content", new { @class = "col-lg-3 control-label" })
            <div class="col-lg-5">
                @Html.TextAreaFor(c => c.Comment.Content, 3, 30, new { @class = "form-control", placeholder = "please input your comment", required = true, maxLength = 512 })
            </div>
            <div class="col-lg-4">
                <h5>
                    <span class="label label-danger">required</span>
                    <span class="label label-info">Maximum length of 512</span>
                </h5>
            </div>
        </div>

        @Html.HiddenFor(model => model.Post.ID)
        @Html.HiddenFor(model => model.Post.Title)
        @Html.HiddenFor(model => model.Post.Url)
        @Html.HiddenFor(model => model.Post.EntryType)
        @Html.HiddenFor(model => model.Post.CreateTime)

        <div class="form-group">
            <div class="col-lg-8" style="text-align: right">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
}

<script type="text/javascript">
    $(function() {
        $('#userComment').validator();
    });
</script>