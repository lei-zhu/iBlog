@using iBlog.Collections
@model ArchiveCollection

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">
            ARCHIVES
        </h3>
    </div>
    <div class="list-group">
        @foreach (Archive archive in Model)
        {
            var url = Url.RouteUrl("PageByYearMonth", new { year = archive.Year, month = archive.Month });
            <a class="list-group-item" href="@url">@archive.MonthYear</a>
        }
    </div>
</div>