@model List<iBlog.Domain.Entities.CategoryEntity>

<div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">
            CATEGORIES
        </h3>
    </div>
    <div class="list-group">
        @foreach (var category in Model)
        {
            var url = Url.RouteUrl("PageByCategory", new { categoryName = category.Slug });
            <a class="list-group-item" href="@url">@category.Name</a>
        }
    </div>
</div>