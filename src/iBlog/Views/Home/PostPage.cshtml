@using iBlog.Models
@model PostPageViewModel

@{
    ViewBag.Title = string.Format("{0} || {1}", Model.Post.Title, Model.BlogName);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("Post", new PostItem { Post = Model.Post, RootUrl = string.Empty })
@Html.Partial("Comments", Model.Post)
@if (Model.Post.CanAddComments)
{
    @Html.Partial("UserComment", new CommentViewModel { Post = Model.Post, Comment = Model.CommentEntity })
}

<br />
@Html.Partial("PostPager", Model)